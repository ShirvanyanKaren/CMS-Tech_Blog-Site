  <div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card border-primary mb-3" style="width: 150%;">
        <div class="card-header bg-primary text-white text-center border-primary">{{title}}</div>
        <div class="card-body text-dark">
            <p class="card-text">{{content}}</p>
        </div>
        <div class="card-footer text-dark d-inline">
            <p class="d-inline">Posted by {{user.username}} on {{format_date posted_date}}</p>
        </div>
    </div>
</div>