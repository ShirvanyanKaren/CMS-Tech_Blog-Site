
{{#each this}}
<div class="container d-flex justify-content-center align-items-center mt-3">
  <div class="card border-primary mb-3" style="width: 120%;">
      <div class="card-body text-dark">
          <p class="card-text">{{user_comment}}</p>
      </div>
      <div class="card-footer bg-primary text-white d-inline">
          <p class="d-inline">Comment Posted by {{comment}} on {{format_date comment_date}}</p>
      </div>
  </div>
</div>
{{/each}}